<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs' ) %>

	<body>
		<!-- Header -->
		<% if (locals.user!=undefined) { %>
			<%- include('./partials/headerLogueado.ejs' ) %>
				<% } else { %>
					<%- include('./partials/headerDeslogueado.ejs' ) %>
						<% } %>

							<!-- Banner -->
							<div class="banner">
								<img src="/images/banner2.jpeg" alt="Banner de ofertas">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Novedades</h2>
									</div>
									<!-- Show the "ultimos" products -->

									<% for (let i=0; i < 4; i++) {%>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/id/<%= productos[i].id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%=productos[i].imagenProducto%>"
															alt="">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= productos[i].nombreProducto %>
														</h2>
														<p>
															<%= productos[i].descripcionProducto %>
														</p>
														<p> <a href="/users/id/<%= productos[i].idUsuario %>">
																Usuario: <%= productos[i].usuario.usuario %>
															</a>
														</p>
													</article>
												</a>
											</section>
										</div>
										<%} %>




								</div>
							</div>
							<!-- /Novedades -->
							<!-- Más comentados -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Más comentados</h2>
									</div>
									<!-- Show the "ultimos" products -->

									<% for (let i=5; i < 9; i++) {%>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/id/<%= productos[i].id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%=productos[i].imagenProducto%>"
															alt="">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= productos[i].nombreProducto %>
														</h2>
														<p>
															<%= productos[i].descripcionProducto %>
														</p>
														<p> <a href="/users/id/<%= productos[i].idUsuario %>">
																Usuario: <%= productos[i].usuario.usuario %>
															</a>
														</p>
													</article>
												</a>
											</section>
										</div>
										<%} %>


								</div>
							</div>
							<!-- /Más comentados -->

							<%- include('./partials/footer.ejs' ) %>

	</body>

</html>