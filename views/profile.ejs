<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->

<%- include('./partials/head.ejs' ) %>

	<body>

		<!-- /Header -->
		<% if (locals.user !=undefined) { %>
			<%- include('./partials/headerLogueado.ejs' ) %>
				<% } else { %>
					<%- include('./partials/headerDeslogueado.ejs' ) %>
						<% } %>
							<!-- Datos del usuario -->
							<section class="info-usuario container products-wrapper">
								<div class="row">
									<div class="img-container offset-3 col-2">
										<img src=<%=usuario.fotoPerfil%> alt="foto de perfil" class="foto-perfil">

									</div>
									<div class="data-container col-6">
										<div class="d-flex align-items-center ">
											<h1 class="main-title">
												<%=usuario.usuario%>
													<a href="/users/profile-edit/<%=usuario.id%>">
														<i class="fas fa-cog"></i>
													</a>
											</h1>
											<a class="btn mt-3 ml-4" href="">SEGUIR</a>
										</div>
										<div>
											<ul class="">
												<li>Cantidad de Productos:<%=usuario.productos.length%>
												</li>

											</ul>
										</div>
									</div>
								</div>
							</section>
							<!-- /Datos del usuario -->

							<!-- Mis productos -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Mis productos</h2>
									</div>

									<% if (usuario.productos.length==0) { %>
										<h2>No tiene productos </h2>
										<% } else { %>


											<% for (let i=(usuario.productos.length -1); i> -1; i--) {%>
												<div class="col-12 col-sm-6 col-lg-3">
													<section class="product-box">
														<a href="/product/id/<%=usuario.productos[i].id%>">
															<figure class="product-box_image">
																<img src="/images/products/<%=usuario.productos[i].imagenProducto%>"
																	alt="">

															</figure>
															<article class="product-box_data">
																<h2>
																	<%= usuario.productos[i].nombreProducto %>
																</h2>
																<p>
																	<%= usuario.productos[i].descripcionProducto %>
																</p>

															</article>
														</a>
													</section>
												</div>
												<%} %>
													<% } %>
														<!-- Show mis productos -->

														<!-- /Mis productos -->


														<!-- footer -->
														<%- include('./partials/footer.ejs' ) %>
															<!-- /footer -->
	</body>

</html>