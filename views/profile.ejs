<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->

<!-- Include Head -->

<%- include('./partials/head.ejs' ) %>
<body>

	<!-- /Header -->
	<%- include('./partials/headerLogueado.ejs' ) %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=<%=usuario.fotoPerfil%> alt="foto de perfil" class="foto-perfil">
				
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.nombreUsuario%>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>

			<% for (let i=0; i < 8; i++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/">
							<figure class="product-box_image">
								<img src=<%=productos[i].imagen%> alt="">
							</figure>
							<article class="product-box_data">
								<h2>
									<%= productos[i].nombreProducto %>
								</h2>
								<p>
									<%= productos[i].descripcion %>
								</p>
								<p>Comentarios: 3</p>
							</article>
						</a>
					</section>
				</div>
				<%} %>
			<!-- Show mis productos -->
			
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs' ) %>
	<!-- /footer -->
</body>

</html>