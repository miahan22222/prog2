<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs' ) %>
	<!-- Header -->
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">
				<%= productos[0].nombreProducto %>
			</h2>
			<p class="product-detail-description">
				<a href="/product/Add/">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/auto1.png" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos[0].descripcion %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>


							<img src=<%= productos[0].comentarios[0].fotoPerfil %> alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/profile/">
											<%= productos[0].comentarios[0].nombreUsuario %>
										</a> </strong>


								<p>
									<%= productos[0].comentarios[0].texto %>
								</p>
							</div>
						</article>
						<article>
							<img src=<%= productos[0].comentarios[0].fotoPerfil %> alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/profile/">
											<%= productos[0].comentarios[0].nombreUsuario %>
										</a> </strong>


								<p>
									<%= productos[0].comentarios[1].texto %>
								</p>
							</div>
						</article>
						<article>
							<img src=<%= productos[0].comentarios[0].fotoPerfil %> alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/profile/">
											<%= productos[0].comentarios[0].nombreUsuario %>
										</a> </strong>


								<p>
									<%= productos[0].comentarios[2].texto %>
								</p>

							</div>
						</article>


					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->


	<!-- footer -->
	<%- include('./partials/footer.ejs' ) %>
	<!-- /footer -->

</body>

</html>