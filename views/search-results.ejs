<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/headerDeslogueado.ejs' ) %>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

		<title> Mercado Liebre Argentina</title>
		<!-- Font Awesome Stylesheet -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
		<!-- Bootstrap Grid Stylesheet -->
		<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
		<!-- Own Stylesheet -->
		<link rel="stylesheet" href="/css/app.css">
	</head>

	<body>
		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Resultados de b√∫squeda</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<h2 class="col-12">
					<% for (let i=0; i < 1; i++) {%>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/">
									<figure class="product-box_image">
										<img src=<%=productos[i].imagen%> alt="">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= productos[i].nombreProducto %>
										</h2>

										<%= productos[i].descripcion %>

											<p>Comentarios: 3</p>
									</article>
								</a>
							</section>
						</div>
						<%} %>
				</h2>


				<!-- footer -->
				<%- include('./partials/footer.ejs' ) %>
				<!-- /footer -->
	</body>

</html>